<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".counter_activity.CounterActivity">

    <TextView
        android:id="@+id/lbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ovde ce se povecavati broj!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/btnAddNumber"
        android:layout_width="132dp"
        android:layout_height="75dp"
        android:layout_marginBottom="216dp"
        android:rotationX="46"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="301dp"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />

    <TextView
        android:id="@+id/tvChooseRb"
        android:layout_width="334dp"
        android:layout_height="70dp"
        android:layout_marginBottom="108dp"
        android:layout_marginLeft="20dp"
        android:text="Izaberite za koliko ocete da vam se uvecava broj:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962">

        <RadioButton
            android:id="@+id/rnOption1"
            android:layout_width="69dp"
            android:layout_height="49dp"
            android:checked="true"
            android:text="Za 1" />

        <RadioButton
            android:id="@+id/rbOption2"
            android:layout_width="67dp"
            android:layout_height="49dp"
            android:checked="false"
            android:text="Za 2" />

        <RadioButton
            android:id="@+id/rbOption3"
            android:layout_width="67dp"
            android:layout_height="49dp"
            android:checked="false"
            android:text="Za 5" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>